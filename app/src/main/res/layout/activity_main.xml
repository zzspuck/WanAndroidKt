<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.MainActivity">
    <FrameLayout
            android:id="@+id/fl_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/radio_group"/>

    <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fl_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">
        <RadioButton
                android:id="@+id/radio_tab_home"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:drawablePadding="@dimen/dp_5"
                android:text="@string/home_page"
                android:textColor="@drawable/selector_tab_text_color"
                android:drawableTop="@drawable/selector_home_tab"/>

        <RadioButton
                android:id="@+id/radio_tab_mine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_weight="1"
                android:text="@string/tab_mine"
                android:gravity="center"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="@drawable/selector_tab_text_color"
                android:drawableTop="@drawable/selector_mine_tab"/>
    </RadioGroup>

</android.support.constraint.ConstraintLayout>